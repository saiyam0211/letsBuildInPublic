# ===========================================
# SaaS Blueprint Generator Platform
# Environment Configuration Template
# ===========================================

# ===========================================
# GENERAL SETTINGS
# ===========================================
NODE_ENV=development
PORT=5000

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/saas_blueprint_generator_dev
MONGODB_URI_TEST=mongodb://localhost:27017/saas_blueprint_generator_test

# Database Credentials (for MongoDB Atlas in production)
DB_USERNAME=your_mongodb_username
DB_PASSWORD=your_mongodb_password
DB_CLUSTER=your_cluster_name

# ===========================================
# REDIS CONFIGURATION
# ===========================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# ===========================================
# JWT & AUTHENTICATION
# ===========================================
JWT_SECRET=your_super_secure_jwt_secret_here_change_this_in_production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your_refresh_token_secret_here
JWT_REFRESH_EXPIRE=30d

# Cookie settings
COOKIE_SECRET=your_cookie_secret_here

# ===========================================
# AI & EXTERNAL SERVICES
# ===========================================
# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000

# LangChain Configuration
LANGCHAIN_API_KEY=your_langchain_api_key
LANGCHAIN_PROJECT=saas-blueprint-generator

# ===========================================
# EMAIL CONFIGURATION
# ===========================================
# SMTP Settings (for user verification, notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password
FROM_EMAIL=noreply@your-domain.com
FROM_NAME=SaaS Blueprint Generator

# ===========================================
# FRONTEND CONFIGURATION
# ===========================================
# CORS Origins (comma-separated)
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
FRONTEND_URL=http://localhost:3000

# Vite Frontend Environment Variables (prefix with VITE_)
VITE_API_URL=http://localhost:5000/api
VITE_APP_NAME=SaaS Blueprint Generator
VITE_NODE_ENV=development
VITE_ENABLE_MOCK_DATA=true

# ===========================================
# SECURITY SETTINGS
# ===========================================
# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Security
SESSION_SECRET=your_session_secret_here

# ===========================================
# FILE UPLOAD & STORAGE
# ===========================================
# Local Storage
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# Cloud Storage (AWS S3, Cloudinary, etc.)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# ===========================================
# MONITORING & LOGGING
# ===========================================
# Logging Level
LOG_LEVEL=debug

# Error Tracking (Sentry, etc.)
SENTRY_DSN=your_sentry_dsn_here

# Analytics
GOOGLE_ANALYTICS_ID=your_ga_tracking_id

# ===========================================
# DEVELOPMENT TOOLS
# ===========================================
# Database Admin
MONGO_EXPRESS_USERNAME=admin
MONGO_EXPRESS_PASSWORD=admin123

# Redis Admin
REDIS_INSIGHT_PORT=8001

# ===========================================
# PRODUCTION DEPLOYMENT
# ===========================================
# Railway/Render Configuration
RAILWAY_PROJECT_ID=your_railway_project_id
RENDER_SERVICE_ID=your_render_service_id

# Domain Configuration
DOMAIN=your-domain.com
API_DOMAIN=api.your-domain.com 